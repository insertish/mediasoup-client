{
	"compileOnSave": true,
	"compilerOptions":
	{
		"lib": ["DOM", "ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true
	},
	"include": [ "src" ]
}
